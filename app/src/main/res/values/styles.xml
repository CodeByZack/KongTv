<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toolbar" parent="AppTheme.AppBarOverlay">
        <item name="android:actionMenuTextColor">@color/colorIcon</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>
    <style name="transparent">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <style name="white">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextMovieDesc">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/mini_text_size</item>
        <item name="android:paddingTop">@dimen/mini_margin</item>
    </style>

    <style name="BtnGreen">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">@dimen/mini_margin</item>
        <item name="android:paddingBottom">@dimen/mini_margin</item>
        <item name="android:paddingRight">@dimen/little_margin</item>
        <item name="android:paddingLeft">@dimen/little_margin</item>
        <item name="android:background">@drawable/btn_green</item>
    </style>
    <style name="BtnTransparent">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">@dimen/mini_margin</item>
        <item name="android:paddingBottom">@dimen/mini_margin</item>
        <item name="android:paddingRight">@dimen/little_margin</item>
        <item name="android:paddingLeft">@dimen/little_margin</item>
        <item name="android:background">@drawable/btn_transparent</item>
    </style>
</resources>
